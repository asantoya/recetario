<!DOCTYPE html>
<html lang="en">
    <body>

        <div class="container">
        <h2>ingresar nueva receta</h2>
        <%= form_for @receta, :url =>  user_recetas_path do |f| %>
          <div><%= f.label :nombre %><br />
          <%= f.text_field :nombre %></div>

          <div><%= f.label :descipcion %><br />
          <%= f.text_area :descipcion %></div>

          <div><%= f.label :ingredientes %><br />
          <%= f.text_area :ingredientes %></div>
      
          <div><%= f.submit "crear receta"%></div>
        <% end %>
        <br />
        <%= link_to "Back", current_user%>
      </div> <!-- /container -->
    </body>
</html>

